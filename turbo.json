{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "api:build": {
      "outputs": ["dist/**"]
    },
    "api:dev": {
      "cache": false,
      "persistent": true
    },
    "api:migrate": {},
    "api:migrate-down": {},
    "api:seed": {}
  }
}
